<div class="container mt-5" id="post-container">

  <div id="title-container">

    <h2>
      {{title}}
    </h2>

    <p>
      by: {{user.username}} on {{format_date date_created}}
    </p>

  </div>

  <p>
    {{content}}
  </p>

</div>

<div class="container mt-4">

  <h4>
    Comments
  </h4>

  {{console_log comments}}

  {{#if comments.length}}

  {{#each comments as |comment|}}

  <div class="card mb-3">

    <div class="card-body">

      <p class="card-text">
        {{comment.content}}
      </p>

      {{!-- <p>- {{user.username}} on {{format_date date_posted}}</p> --}}

    </div>

  </div>

  {{/each}}

  {{else}}

  <p>No comments yet. Be the first to comment!</p>

  {{/if}}

  {{#if logged_in}}

  <form class="mt-4 post-comment-form">

    <div class="form-group">

      <label for="comment-input">Add a Comment</label>

      <textarea 
      class="form-control" 
      id="comment-input" 
      rows="3"
      >
      </textarea>

    </div>

    <button type="submit" class="btn btn-primary">
      Submit Comment
    </button>

  </form>

  {{/if}}

</div>

<script src="/js/create-comment.js"></script>