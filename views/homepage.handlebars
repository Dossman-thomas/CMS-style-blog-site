<!-- Loop over each object in the projects array -->

<div class="card-container">

{{#each posts as |post| }}

  <div class="card">
    <h2>
     <a class="post-titles" href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      By {{post.user.username}} on {{format_date post.date_created}}
    </p>
    
  </div>

{{/each}}

</div>



