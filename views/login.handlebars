<div class="row">

  <div class="col-md-6 display-flex justify-content-center flex-column justify-content-center">
    <h2 id="login-heading">Login</h2>

    <form class="form login-form">

      <div class="form-group">

        <label for="username-login">
          Username:
        </label>

        <input 
        class="form-input" 
        type="text" 
        id="email-login" 
        placeholder="Enter Your Username"
        />

      </div>

      <div class="form-group">
        
        <label for="password-login">
          Password:
        </label>

        <input 
        class="form-input" 
        type="password" 
        id="password-login"
        placeholder="Enter Your Password"
        />

      </div>

      <div class="form-group">

        <button 
        class="btn btn-primary" type="submit">
        login
        </button>

      </div>

    </form>

  </div>
  <div class="col-md-6 display-flex flex-column justify-content-center align-items-center">

    <h2>Not A Member?</h2>

    <a id="signup" href="/signup">Join Now!</a>

  </div>

</div>

<script src="../public/js/login.js"></script>
